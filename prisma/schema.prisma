generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  google_id  String    @unique
  email      String    @unique
  name       String?
  created_at DateTime  @default(now())
  last_login DateTime  @default(now()) @updatedAt
  Snippets   Snippet[]

  @@index([email])
}

model Language {
  language_id   Int       @id
  language_name String    @unique
  extension     String    @unique
  Snippet       Snippet[]
}

model Snippet {
  snippet_id  String   @id @default(uuid())
  author_id   Int
  title       String
  description String?
  source_code String   @db.LongText
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt
  is_private  Boolean  @default(false)
  language_id Int

  language Language @relation(fields: [language_id], references: [language_id], onDelete: Cascade)
  author   User     @relation(fields: [author_id], references: [id], onDelete: Cascade)

  @@index([created_at])
  @@index([author_id])
  @@index([language_id])
  @@index([author_id, is_private])
}
